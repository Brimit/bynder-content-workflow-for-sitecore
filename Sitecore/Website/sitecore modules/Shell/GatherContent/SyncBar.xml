<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://www.sitecore.net/content">
  <SyncBar>
    <WizardForm CodeBeside="GatherContent.Connector.Website.Shell.SyncBar, GatherContent.Connector.Website">
      <WizardFormPage ID="FirstPage" Header="Gather Content Sync wizard" Text="Welcome to the Gather Content Sync Files Wizard." Icon="Applications/48x48/recycle.png">
        <WizardFormPadding>
          <Scrollbox Border="none" Background="transparent">
            <Groupbox Header="Synchronize statuses in Sitecore with Gather Content. Choose projects and click Next to start synchronization." Margin="0px 0px 16px 0px">
            </Groupbox>

            <Checklist ID="Projects" Header="Projects"/>
            
          </Scrollbox>
          
        </WizardFormPadding>
        
      </WizardFormPage>

      <WizardFormPage ID="Synchronization" Header="Synchronization" Text="Please wait while synchronization is running..." Icon="Applications/48x48/recycle.png">
        <GridPanel Width="100%">

          <Space Height="64"/>

          <ThemedImage Src="Applications/48x48/find.png" Width="48" Height="48" GridPanel.Align="center"/>

          <Space Height="16"/>

          <Border Align="center">
            <ThemedImage Src="Images/progress.gif" Width="94" Height="17"/>
          </Border>

          <Space Height="16"/>

          <Border ID="Text" Align="center" GridPanel.Align="center" GridPanel.Style="font-weight:bold">
            <Literal Text="Synchronization..."/>
          </Border>
          <Space Height="16"/>
          <Border ID="Status" Align="center" GridPanel.Align="center">
            &#160;
          </Border>

        </GridPanel>
      </WizardFormPage>

      <WizardFormPage ID="Retry" Header="Error" Text="An error occurred while synchronization Gather content items." Icon="Applications/48x48/recycle.png">
        <WizardFormPadding>
          <GridPanel Width="100%" Height="100%" Fixed="true">
            <Memo ID="ErrorText" ReadOnly="true" Width="100%" Height="100%" RenderAs="WebControl"/>
          </GridPanel>
        </WizardFormPadding>
      </WizardFormPage>

      <WizardFormPage ID="LastPage" Header="The wizard has completed." Text="Click Finish to close the wizard." Icon="Applications/48x48/recycle.png">
        <WizardFormPadding>

          <GridPanel Width="100%" Height="100%" Fixed="true">
            <Memo ID="ResultText" ReadOnly="true" Width="100%" Height="100%" GridPanel.Height="100%"/>
          </GridPanel>

        </WizardFormPadding>
      </WizardFormPage>
    </WizardForm>
  </SyncBar>
</control>
